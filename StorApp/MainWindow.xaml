<Window x:Class="StorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StorApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="800" MinHeight="450">
    <Grid Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#FEFFB7" VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="24" Orientation="Horizontal">
            <Image Source="/img/logo.png" Stretch="UniformToFill" StretchDirection="Both"></Image>
            <TextBlock x:Name="header" Text="HELLOWINDOW" FontFamily="Serifiqo 4F Free Capitals" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="0,4,0,0"/>
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Row="1" VerticalContentAlignment="Stretch" Padding="12,12,12,12" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
