<UserControl x:Class="StorApp.ProductCheckUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StorApp"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="400">
    <Grid Background="#FEFFB7" Height="20">
        <TextBlock x:Name="txtProductName" FontFamily="Serifiqo 4F Free Capitals" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,0,0,0">PRODUCT1</TextBlock>
        <TextBlock FontFamily="Serifiqo 4F Free Capitals" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,64,0">COUNT</TextBlock>
        <Button x:Name="btnRemoveFromCart" Background="#03DAC5" HorizontalAlignment="Right" Margin="322,0,12,0" Width="43" Click="btnRemoveFromCart_Click" BorderBrush="{x:Null}">
            <Image Source="/img/icons8-крестик-48.png"></Image>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</UserControl>
